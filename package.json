{
  "name": "scepter",
  "version": "0.0.1",
  "scripts": {
    "dev": "docker compose -f ./compose.dev.yml --env-file ./.env up -d && turbo run start:dev",
    "stop:dev": "docker compose -f ./compose.dev.yml stop",
    "prod": "docker compose -f ./compose.prod.yml up -d",
    "stop:prod": "docker compose -f ./compose.prod.yml stop",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "build": "turbo run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WindSet168spd/scepter.git"
  },
  "bugs": {
    "url": "https://github.com/WindSet168spd/scepter/issues"
  },
  "homepage": "https://github.com/WindSet168spd/scepter#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "{apps,packages}/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --check"
    ]
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
